<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001-create-product-registry-table" author="Timur Aslitdinov">
        <createTable tableName="product_registry">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>
            <column name="open_date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="product_registry"
                columnNames="account_id, product_id"
                constraintName="uk_product_registry_account_product"/>
    </changeSet>

    <changeSet id="002-create-payment-registry-table" author="Timur Aslitdinov">
        <createTable tableName="payment_registry">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_registry_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="payment_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate_amount" type="DECIMAL(15,2)"/>
            <column name="debt_amount" type="DECIMAL(15,2)"/>
            <column name="expired" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="payment_expiration_date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addDefaultValue
                tableName="payment_registry"
                columnName="expired"
                defaultValueBoolean="false"/>

        <addForeignKeyConstraint
                baseTableName="payment_registry"
                baseColumnNames="product_registry_id"
                constraintName="fk_payment_registry_product"
                referencedTableName="product_registry"
                referencedColumnNames="id"
                onDelete="RESTRICT"/>
    </changeSet>

</databaseChangeLog>