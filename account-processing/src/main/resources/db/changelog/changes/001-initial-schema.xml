<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001-create-accounts-table" author="Timur Aslitdinov">
        <createTable tableName="accounts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate" type="DECIMAL(5,2)"/>
            <column name="is_recalc" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="card_exist" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addDefaultValue
                tableName="accounts"
                columnName="balance"
                defaultValueNumeric="0.00"/>
        <addDefaultValue
                tableName="accounts"
                columnName="is_recalc"
                defaultValueBoolean="false"/>
        <addDefaultValue
                tableName="accounts"
                columnName="card_exist"
                defaultValueBoolean="false"/>
        <addDefaultValue
                tableName="accounts"
                columnName="status"
                defaultValue="ACTIVE"/>
    </changeSet>

    <changeSet id="002-create-cards-table" author="Timur Aslitdinov">
        <createTable tableName="cards">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="card_id" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="payment_system" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addDefaultValue
                tableName="cards"
                columnName="status"
                defaultValue="ACTIVE"/>
    </changeSet>

    <changeSet id="003-create-payments-table" author="Timur Aslitdinov">
        <createTable tableName="payments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="payment_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="is_credit" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="payed_at" type="TIMESTAMP"/>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-create-transactions-table" author="Timur Aslitdinov">
        <createTable tableName="transactions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="card_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addDefaultValue
                tableName="transactions"
                columnName="status"
                defaultValue="PROCESSING"/>
    </changeSet>

</databaseChangeLog>