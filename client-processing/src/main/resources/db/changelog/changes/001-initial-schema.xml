<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001-create-users-table" author="Timur Aslitdinov">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-create-products-table" author="Timur Aslitdinov">
        <createTable tableName="products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="key" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="VARCHAR(255)">
                <constraints unique="true" nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-clients-table" author="Timur Aslitdinov">
        <createTable tableName="clients">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="VARCHAR(12)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true" foreignKeyName="fk_client_user" references="users(id)"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="date_of_birth" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="document_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="document_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="document_prefix" type="VARCHAR(10)"/>
            <column name="document_suffix" type="VARCHAR(10)"/>
        </createTable>
    </changeSet>

    <changeSet id="004-create-client-products-table" author="Timur Aslitdinov">
        <createTable tableName="client_products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_client_product_client" references="clients(id)"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_client_product_product" references="products(id)"/>
            </column>
            <column name="open_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="close_date" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>